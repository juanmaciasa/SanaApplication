@model IEnumerable<DAL.VIEW_PRODUCTS>
@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>
@Html.ActionLink("Create Product", "Create", new object { }, new { @class = "btn", type = "button" })
<hr />
<table>
    <tr>
        <th>Product Number</th>
        <th>Product Title</th>
        <th>Product Price</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Product_id</td>
            <td>@item.Product_title</td>
            <td>@item.Product_price</td>            
        </tr>
    }
</table>

